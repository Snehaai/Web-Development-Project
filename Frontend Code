<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="logo">Mindful Moments</div>
            <nav class="nav">
                <a href="#" class="active">Home</a>
                <a href="#">Journal</a>
                <a href="#">Insights</a>
                <a href="#">Community</a>
            </nav>
            <div class="user-profile">S</div>
        </div>

        <!-- Main Content -->
        <h1 class="main-title">How are you feeling today, Sarah?</h1>
        <p class="subtitle">Choose an emoji that best represents your mood.</p>

        <!-- Mood Selector -->
        <div class="mood-selector">
            <div class="mood-emoji" data-mood="1">üò¢</div>
            <div class="mood-emoji" data-mood="2">üòü</div>
            <div class="mood-emoji" data-mood="3">üòê</div>
            <div class="mood-emoji" data-mood="4">üôÇ</div>
            <div class="mood-emoji" data-mood="5">üòä</div>
        </div>

        <!-- Journal Input -->
        <div class="journal-input">
            <textarea class="journal-textarea" placeholder="Write about your day..." id="journalText"></textarea>
            <button class="save-btn" onclick="saveEntry()">Save Entry</button>
            <div style="clear: both;"></div>
        </div>

        <!-- Past Entries -->
        <h2 class="section-title">Past Entries</h2>
        <div id="entriesContainer">
            <!-- Entries will be dynamically loaded here -->
        </div>

        <!-- Mood Trends -->
        <div class="mood-trends">
            <h2 class="section-title">Mood Trends</h2>
            <div class="trend-header">
                <div>
                    <div class="trend-label">Mood Trend</div>
                    <div class="trend-average">Average: <span id="averageMood">3.5</span></div>
                    <div class="trend-change">Last 7 Days: <span id="trendChange">+10%</span></div>
                </div>
            </div>
            <div class="chart-container">
                <div class="chart-line"></div>
            </div>
            <div class="chart-labels">
                <span>Mon</span>
                <span>Tue</span>
                <span>Wed</span>
                <span>Thu</span>
                <span>Fri</span>
                <span>Sat</span>
                <span>Sun</span>
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let selectedMood = null;
        let editingId = null;
        let entries = [];

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            loadEntries();
            setupEventListeners();
        });

        function setupEventListeners() {
            // Mood selector event listeners
            document.querySelectorAll('.mood-emoji').forEach(emoji => {
                emoji.addEventListener('click', function() {
                    selectMood(this.dataset.mood);
                });
            });
        }

        function selectMood(mood) {
            // Remove previous selection
            document.querySelectorAll('.mood-emoji').forEach(emoji => {
                emoji.classList.remove('selected');
            });
            
            // Add selection to clicked emoji
            document.querySelector(`[data-mood="${mood}"]`).classList.add('selected');
            selectedMood = parseInt(mood);
        }

        function saveEntry() {
            const journalText = document.getElementById('journalText').value;
            
            if (!journalText.trim()) {
                alert('Please write something in your journal entry.');
                return;
            }
            
            if (!selectedMood) {
                alert('Please select a mood emoji.');
                return;
            }

            const entry = {
                id: editingId || Date.now(),
                text: journalText,
                mood: selectedMood,
                date: new Date().toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                }),
                timestamp: new Date()
            };

            if (editingId) {
                // Update existing entry
                const index = entries.findIndex(e => e.id === editingId);
                if (index !== -1) {
                    entries[index] = entry;
                }
                editingId = null;
                document.querySelector('.save-btn').textContent = 'Save Entry';
            } else {
                // Add new entry
                entries.unshift(entry);
            }

            // Save to localStorage (for frontend-only version)
            localStorage.setItem('journalEntries', JSON.stringify(entries));

            // Clear form
            document.getElementById('journalText').value = '';
            document.querySelectorAll('.mood-emoji').forEach(emoji => {
                emoji.classList.remove('selected');
            });
            selectedMood = null;

            // Refresh display
            loadEntries();
            updateMoodTrends();
        }

        function loadEntries() {
            // Load from localStorage (for frontend-only version)
            const stored = localStorage.getItem('journalEntries');
            if (stored) {
                entries = JSON.parse(stored);
            }

            displayEntries();
        }

        function displayEntries() {
            const container = document.getElementById('entriesContainer');
            
            if (entries.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999; padding: 40px;">No entries yet. Start writing your first journal entry!</p>';
                return;
            }

            container.innerHTML = entries.map(entry => `
                <div class="entry-item">
                    <div class="entry-icon">üìù</div>
                    <div class="entry-content">
                        <div class="entry-date">${entry.date}</div>
                        <div class="entry-text">${entry.text}</div>
                    </div>
                    <div class="entry-mood">${getMoodEmoji(entry.mood)}</div>
                    <button class="edit-btn" onclick="editEntry(${entry.id})">Edit</button>
                    <button class="delete-btn" onclick="deleteEntry(${entry.id})">Delete</button>
                </div>
            `).join('');
        }

        function getMoodEmoji(mood) {
            const emojis = ['', 'üò¢', 'üòü', 'üòê', 'üôÇ', 'üòä'];
            return emojis[mood] || 'üòê';
        }

        function deleteEntry(id) {
            if (confirm('Are you sure you want to delete this entry?')) {
                entries = entries.filter(entry => entry.id !== id);
                localStorage.setItem('journalEntries', JSON.stringify(entries));
                displayEntries();
                updateMoodTrends();
            }
        }

        function editEntry(id) {
            const entry = entries.find(e => e.id === id);
            if (entry) {
                document.getElementById('journalText').value = entry.text;
                selectMood(entry.mood);
                editingId = id;
                document.querySelector('.save-btn').textContent = 'Update Entry';
                
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        function updateMoodTrends() {
            if (entries.length === 0) return;

            // Calculate average mood
            const totalMood = entries.reduce((sum, entry) => sum + entry.mood, 0);
            const average = (totalMood / entries.length).toFixed(1);
            document.getElementById('averageMood').textContent = average;

            // Calculate trend (simplified)
            const recentEntries = entries.slice(0, 7);
            const olderEntries = entries.slice(7, 14);
            
            if (olderEntries.length > 0) {
                const recentAvg = recentEntries.reduce((sum, entry) => sum + entry.mood, 0) / recentEntries.length;
                const olderAvg = olderEntries.reduce((sum, entry) => sum + entry.mood, 0) / olderEntries.length;
                const change = ((recentAvg - olderAvg) / olderAvg * 100).toFixed(0);
                
                const changeElement = document.getElementById('trendChange');
                if (change > 0) {
                    changeElement.textContent = `+${change}%`;
                    changeElement.style.color = '#28a745';
                } else {
                    changeElement.textContent = `${change}%`;
                    changeElement.style.color = change < 0 ? '#dc3545' : '#28a745';
                }
            }
        }

        // Initialize mood trends on load
        updateMoodTrends();
    </script>
</body>
</html>
